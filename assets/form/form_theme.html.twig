{% block form_row %}
    {{ form_widget(form) }}
{% endblock %}

{% block form_widget_simple %}
    {{ text_input({
        name: full_name,
        id: id,
        label: form.vars.label is same as(false)
            ? form.vars.name
            : (form.vars.label ?? form.vars.name),
        placeholder: attr.placeholder ?? null,
        required: required,
        value: value
    }) }}
{% endblock %}

{% block hidden_widget %}
    {{ hidden_input({
        name: full_name,
        id: id,
        value: value
    }) }}
{% endblock %}

{% block submit_widget %}
    {{ submit_input({
        name: full_name,
        id: id,
        label: form.vars.label is same as(false)
            ? form.vars.name
            : (form.vars.label ?? form.vars.name),
        value: value
    }) }}
{% endblock %}
